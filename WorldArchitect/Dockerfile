FROM mcr.microsoft.com/dotnet/runtime:6.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["WorldArchitect/WorldArchitect.fsproj", "WorldArchitect/"]
RUN dotnet restore "WorldArchitect/WorldArchitect.fsproj"
COPY . .
WORKDIR "/src/WorldArchitect"
RUN dotnet build "WorldArchitect.fsproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "WorldArchitect.fsproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "WorldArchitect.dll"]
